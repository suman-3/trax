generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Board {
  id            String @id @default(uuid())
  orgId         String
  title         String
  imageId       String
  imageThumbUrl String @db.LongText
  imageFullUrl  String @db.LongText
  imageUserName String @db.LongText
  imageLinkHTML String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
